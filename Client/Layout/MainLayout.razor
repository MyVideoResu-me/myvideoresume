@using MyVideoResume.Web.Common
@inherits BaseComponent
<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn SizeXS="1" Size="2">
                <RadzenSidebarToggle Click="@MenuService.SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn SizeXS="1" Size="1">
                <a href="/"><RadzenImage Path=@Logo AlternateText="MyVideoResu.me" style="height: 20px;"></RadzenImage></a>
            </RadzenColumn>
            <RadzenColumn SizeXS="10" Size="9">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem" class="rz-px-2">
                    <RadzenMenu Responsive="false">
                        <AuthorizeView>
                            <Authorized>
                                <RadzenMenuItem Icon="add_circle">
                                    <RadzenMenuItem Text="Create Job" Path=@Paths.Jobs_View Icon="note_add" Visible="@Security.IsInRole("Recruiter")"></RadzenMenuItem>
                                    <RadzenMenuItem Text="Create Resume" Path=@Paths.Resume_View Icon="video_call" Visible="@Security.IsInRole("JobSeeker", "Recruiter")"></RadzenMenuItem>
                                </RadzenMenuItem>
                            </Authorized>
                            <NotAuthorized>
                                <RadzenButton ButtonStyle="ButtonStyle.Light" Style="font-weight: bold" Text="$" Click=@(()=> NavigateTo(@Paths.Site_Pricing))></RadzenButton>
                            </NotAuthorized>
                        </AuthorizeView>
                    </RadzenMenu>
                    <AuthorizeView>
                        <Authorized>
                            <RadzenProfileMenu Click="@ProfileMenuClick">
                                <ChildContent>
                                    <RadzenProfileMenuItem Path=@Paths.Profile_Settings Icon="manage_accounts" Text="My Account" title="My Account" />
                                    <RadzenProfileMenuItem Path=@Paths.Dashboard_View Icon="manage_accounts" Text="Dashboard" />
                                    <RadzenProfileMenuItem Path=@Paths.Admin_BackgroundJobsPortal Icon="smart_toy" Text="Portal" Visible="@Security.IsInRole("Admin")" />
                                    <RadzenProfileMenuItem Path=@Paths.Admin_ApplicationUsers Icon="person" Text="Users" Visible="@Security.IsInRole("Admin")" />
                                    <RadzenProfileMenuItem Path=@Paths.Admin_ApplicationRoles Icon="security" Text="Roles" Visible="@Security.IsInRole("Admin")" />
                                    <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                                </ChildContent>
                                <Template>
                                    <RadzenGravatar Email="@Security.User?.Name" />
                                </Template>
                            </RadzenProfileMenu>
                        </Authorized>
                        <NotAuthorized>
                            <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="Login" Click=@(()=> NavigateTo(Paths.Site_Login)) Text="Sign In"></RadzenButton>
                        </NotAuthorized>
                    </AuthorizeView>
                    <RadzenAppearanceToggle DarkTheme="standard-dark" />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(MenuService.SidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Dashboard" Path="dashboard" Icon="dashboard" title="Dashboard" />
            <RadzenPanelMenuItem Text="Resumes" Path="resumes" Icon="contract" title="Resumes" />
            <RadzenPanelMenuItem Text="Jobs" Path="jobs" Icon="database" title="Jobs" />
            <RadzenPanelMenuItem Text="Companies" Path="companies" Icon="store" title="Companies" />
            <RadzenPanelMenuItem Text="People" Path="people" Icon="contacts" title="People" />
            <RadzenPanelMenuItem Text="Tools" Icon="handyman" title="Tools">
                <RadzenPanelMenuItem Text="Sentiment Analysis" Path=@Paths.Tools_Sentiment Icon="mood" title="Sentiment Analysis" />
                <RadzenPanelMenuItem Text="Job Match Analysis" Path=@Paths.Tools_JobMatch Icon="join_inner" title="Job Match Analysis" />
                <RadzenPanelMenuItem Text="Summarize Resume" Path=@Paths.Tools_SummarizeResume Icon="query_stats" title="Summarize Resume" />
                <RadzenPanelMenuItem Text="Convert Resume" Path=@Paths.Tools_PdfToJson Icon="convert_to_text" title="PDF to JSON" />
                <RadzenPanelMenuItem Text="Best Resume" Path=@Paths.Tools_BestResume Icon="star" title="Best Resume Generator" />

            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Tasks" Icon="task_alt" title="Tasks">
                <RadzenPanelMenuItem Text="Tasks" Path=@Paths.Tasks_View Icon="task_alt" title="Tasks" />
                <RadzenPanelMenuItem Text="Schedule" Path=@Paths.Tasks_Schedule Icon="query_stats" title="Schedule" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Outreach" Path="feed" Icon="campaign" title="Outreach" />
            <RadzenPanelMenuItem Text="Help / About" Icon="info" title="Help / About">
                <RadzenPanelMenuItem Text="How To Articles" Path=@Paths.Site_Help Icon="question_mark" title="How To Articles" />
                <RadzenPanelMenuItem Text="About" Path=@Paths.Site_About Icon="store" title="About" />
                <RadzenPanelMenuItem Text="Contact Us" Path=@Paths.Site_ContactUs Icon="store" title="About" />
                <RadzenPanelMenuItem Text="What's New?" Path=@Paths.Site_ReleaseNotes Icon="store" title="What's New? Release Notes" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <RadzenRow>
            <RadzenColumn Size="11" SizeXS="11" SizeSM="12" SizeMD="12" SizeLG="12" SizeXL="12" SizeXX="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenFooter>
        <RadzenRow JustifyContent="JustifyContent.Left" AlignItems="AlignItems.Normal" Gap="0">
            <RadzenColumn Size="12">
                <CopyrightInformation></CopyrightInformation>
            </RadzenColumn>
        </RadzenRow>
    </RadzenFooter>
</RadzenLayout>

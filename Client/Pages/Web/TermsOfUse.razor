@page "/termsofuse"@inherits BaseComponent<PageTitle>MyVideoResu.ME - Terms of Use</PageTitle><RadzenRow Gap="5" RowGap="5" style="height:100%">    <RadzenColumn Size="12" style="height:100%">                <iframe id="Iframe" src="terms.html" width="100%" height="600px" style="display:inline; background:white">        </iframe>    </RadzenColumn></RadzenRow><script>    function resizeIframe(){           // Selecting the iframe element        var frame = document.getElementById("Iframe");        if(frame){                // set the height of the iframe as                // the height of the iframe content                var height = frame.contentWindow.document.body.scrollHeight + 300;                frame.style.height =  height + 'px';                // set the width of the iframe as the                // width of the iframe content                frame.style.width  = frame.contentWindow.document.body.scrollWidth + 'px';        }    }    // Resize the iframe when the page loads    window.onload = resizeIframe;    // Resize the iframe when the window is resized    window.onresize = resizeIframe;</script>
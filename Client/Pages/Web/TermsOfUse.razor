@page "/termsofuse"@inherits BaseComponent<PageTitle>MyVideoResu.ME - Terms of Use</PageTitle><RadzenRow Gap="5" RowGap="5" style="height:100%">    <RadzenColumn Size="12" style="height:100%">                <iframe id="Iframe" src="/terms.html" width="100%" height="100%" style="display:inline; background:white">        </iframe>    </RadzenColumn></RadzenRow><script>    // Selecting the iframe element    var frame = document.getElementById("Iframe");    // Adjusting the iframe height onload event    frame.onload = function() {        // set the height of the iframe as        // the height of the iframe content        frame.style.height = frame.contentWindow.document.body.scrollHeight + 'px';        // set the width of the iframe as the        // width of the iframe content        frame.style.width  = frame.contentWindow.document.body.scrollWidth + 'px';    }</script>